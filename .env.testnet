# ANDE Chain Testnet Configuration
# Premium Production Setup for Celestia Mocha-4 Testnet

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================
CHAIN_ID=6174
NETWORK_NAME="ANDE Testnet"
NETWORK_ENV="testnet"

# ============================================================================
# CONSENSUS CONFIGURATION
# ============================================================================
CONSENSUS_ENABLED=true

# Testnet RPC endpoints (adjust to your deployment)
CONSENSUS_RPC_URL=https://rpc.celestia-mocha.com
CONSENSUS_WS_URL=wss://rpc.celestia-mocha.com/websocket

# Contract addresses (will be updated after deployment)
CONSENSUS_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
COORDINATOR_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
REGISTRY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Sequencer configuration
SEQUENCER_ADDRESS=0x0000000000000000000000000000000000000000
SEQUENCER_PRIVATE_KEY=  # Add your private key for testnet

# Rotation and timeout settings
BLOCKS_PER_ROTATION=100
TIMEOUT_BLOCKS=10
BLOCK_TIME_SECONDS=2

# Sync settings
SYNC_INTERVAL_SECONDS=30
METRICS_INTERVAL_SECONDS=10

# ============================================================================
# CELESTIA DATA AVAILABILITY
# ============================================================================
CELESTIA_ENABLED=true
CELESTIA_NETWORK=mocha-4
CELESTIA_RPC_URL=https://rpc.celestia-mocha.com
CELESTIA_API_URL=https://api.celestia-mocha.com
CELESTIA_NAMESPACE=00000000000000000000616e6465636861696e2d7631
CELESTIA_AUTH_TOKEN=  # Add your Celestia auth token

# Gas settings for DA submissions
CELESTIA_GAS_PRICE=0.002
CELESTIA_GAS_LIMIT=2000000

# ============================================================================
# EVOLVE SEQUENCER
# ============================================================================
EVOLVE_ENABLED=true
EVOLVE_RPC_URL=http://localhost:7331
EVOLVE_ENGINE_URL=http://localhost:8551
EVOLVE_JWT_SECRET_PATH=/data/jwt.hex

# ============================================================================
# EVM CONFIGURATION
# ============================================================================
EVM_CHAIN_ID=6174
EVM_SPEC=cancun
EVM_BLOCK_GAS_LIMIT=30000000
EVM_BASE_FEE_MIN=7
EVM_OPTIMIZATION_LEVEL=production

# Precompile configuration
ANDE_PRECOMPILE_ENABLED=true
ANDE_PRECOMPILE_ADDRESS=0x00000000000000000000000000000000000000fd
ANDE_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000  # Update after deployment

# ============================================================================
# PARALLEL EXECUTION
# ============================================================================
PARALLEL_ENABLED=true
PARALLEL_WORKER_COUNT=auto  # Will use optimal_worker_count()
PARALLEL_MAX_PENDING_TXS=1000
PARALLEL_CONFLICT_THRESHOLD=0.3

# ============================================================================
# MEV DETECTION
# ============================================================================
MEV_DETECTION_ENABLED=true
MEV_MIN_VALUE=100000000000000000  # 0.1 ANDE
MEV_DETECT_ARBITRAGE=true
MEV_DETECT_SANDWICH=true
MEV_DETECT_LIQUIDATION=true

# Known DEX routers (add testnet addresses)
MEV_DEX_ROUTERS=

# Known lending protocols (add testnet addresses)
MEV_LENDING_PROTOCOLS=

# ============================================================================
# RPC CONFIGURATION
# ============================================================================
RPC_ENABLED=true
RPC_HOST=0.0.0.0
RPC_PORT=8545
RPC_WS_PORT=8546
RPC_MAX_CONNECTIONS=1000
RPC_CORS_ORIGINS=*

# RPC modules
RPC_MODULES=eth,net,web3,txpool,debug,trace

# ============================================================================
# P2P NETWORKING
# ============================================================================
P2P_ENABLED=true
P2P_PORT=30303
P2P_MAX_PEERS=50
P2P_BOOTNODES=  # Add bootnode enode URLs

# ============================================================================
# DATABASE & STORAGE
# ============================================================================
DB_PATH=/data/ande-chain
DB_CACHE_SIZE=2GB
DB_LOG_LEVEL=info

# State pruning
PRUNING_ENABLED=true
PRUNING_MODE=archive  # archive, full, or fast

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/logs/ande-node.log

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Prometheus push gateway (optional)
PROMETHEUS_PUSHGATEWAY=

# ============================================================================
# SECURITY
# ============================================================================
# API authentication
API_KEY_ENABLED=false
API_KEY=  # Generate secure API key for production

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=100

# Firewall rules (suggested)
# Allow: 8545 (RPC), 8546 (WS), 30303 (P2P), 9090 (Metrics)
# Deny: all other incoming

# ============================================================================
# BACKUP & RECOVERY
# ============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# ============================================================================
# TESTNET FAUCET (for testing)
# ============================================================================
FAUCET_ENABLED=true
FAUCET_AMOUNT=1000000000000000000000  # 1000 ANDE
FAUCET_COOLDOWN_SECONDS=86400  # 24 hours
FAUCET_ADDRESS=0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266

# ============================================================================
# DEPLOYMENT TRACKING
# ============================================================================
DEPLOYMENT_DATE=
DEPLOYMENT_VERSION=v1.0.0-testnet
DEPLOYMENT_COMMIT=

# ============================================================================
# MAINTENANCE
# ============================================================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="ANDE Chain is currently under maintenance"

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_ACCOUNT_ABSTRACTION=true
FEATURE_NATIVE_STAKING=true
FEATURE_GOVERNANCE=true
FEATURE_BRIDGE=true
FEATURE_PERPETUALS=false  # Enable when ready
FEATURE_LENDING=false     # Enable when ready

# ============================================================================
# NOTIFICATIONS (optional)
# ============================================================================
SLACK_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
EMAIL_ALERTS_ENABLED=false
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_FROM=
EMAIL_TO=
